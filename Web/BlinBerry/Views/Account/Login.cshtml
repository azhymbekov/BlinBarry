@model BlinBerry.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h1 class="text-center" style="margin-top:10%">Вход в систему</h1>

<div class="container">
    <form method="post" asp-controller="Account" asp-action="Login" style="max-width: 390px ;padding: 15px; margin: 0 auto;">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <input asp-for="UserName" class="form-control" placeholder="Логин" id="login" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-group">           
            <input asp-for="Password" class="form-control" type="password" placeholder="Пароль" id="password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Войти" class="btn btn-lg btn-primary btn-block" id="button" />
            <a class="btn btn-lg btn-primary btn-block" asp-area="" asp-controller="Account" asp-action="Register">Регистрация</a>
        </div>        
    </form>  
</div>
