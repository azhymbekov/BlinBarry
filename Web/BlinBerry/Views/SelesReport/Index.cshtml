@model IEnumerable<BlinBerry.Services.Common.SelesReport.Models.SelesReportDto>

@{
    ViewData["Title"] = "Index";
}

<h1>Список отчетов</h1>

<p>
    <a asp-action="CreateNewReportAsync">Добавить отчет</a>
</p>
<table class="table">
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                <span style="color: blueviolet;">

                    @Html.DisplayFor(modelItem => item.DayOfWeek)
                </span>

                <br />
                <span style="font-size: x-small">  Продано кг : @item.CountOfKg</span>
            </td>

            <td>
                <span style="color: blueviolet;">

                  Количество браков :   @Html.DisplayFor(modelItem => item.DefectiveKg) 
                </span>

                <br />
                <span style="font-size: x-small">  Выручка за день : @item.Cash</span>
            </td>

            <td>
                @Html.ActionLink("Редактировать", "CreateNewReportAsync", new { seleId = item.Id })
            </td>
        </tr>
        }
    </tbody>
</table>

